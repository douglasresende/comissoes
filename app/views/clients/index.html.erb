<h1>Listing clients</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Consultant</th>
    <th>Indicator</th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.consultant %></td>
    <td><%= client.indicator %></td>
    <td>
      <%= link_to content_tag('i', '', :class => 'icon-eye-open'), client, :class => 'btn'%>
      <%= link_to content_tag('i', '', :class => 'icon-pencil'), edit_client_path(client), :class => 'btn' %>
      <%= link_to content_tag('i', '', :class => 'icon-remove'), client, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
    </td>
  </tr>
<% end %>
</table>

