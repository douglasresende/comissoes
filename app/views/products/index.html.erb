<h1>Lista de Produtos</h1>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Nome</th>
    <th>Preço</th>
    <th>Garantia</th>
    <th style="width: 15%"></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.warranty %></td>
    <td>
      <%= link_to content_tag('i', '', :class => 'icon-eye-open'), product, :class => 'btn btn-mini'%>
      <%= link_to content_tag('i', '', :class => 'icon-pencil'), edit_product_path(product), :class => 'btn btn-mini' %>
      <%= link_to content_tag('i', '', :class => 'icon-remove icon-white'), product, method: :delete, data: { confirm: 'Confirme exclusão?' }, :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Produto', new_product_path, :class => "btn" %>
