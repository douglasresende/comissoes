<div class="well" style="max-width: 244px; margin: 0 auto 0px;">
  <div class="form-vertical">
    <h1><%= t '.title' %></h1>

    <% if @session.errors.has_key? :base %> 
      <div class="alert alert-error">
        <%= @session.errors[:base].join(', ') %>
      </div>
    <% end %>

    <%= form_for @session, :html => { :style => 'margin-bottom: 0px;' } do |f| %>
      <div class="control-group">
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.text_field :email, :placeholder => t('.email') %>
            <%= error_tag @session, :email %>
          </div>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.password_field :password, :placeholder => t('.password') %>
            <%= error_tag @session, :password %>
          </div>
        </div>
      </div>

      <div class="form-actions" style="padding: 10px 0px 0px 0px; margin-bottom: 0px;">
        <span class="pull-left"><%= link_to t('.sign_up'), new_user_path %></span>
        <span class="pull-right"><%= f.submit t('helpers.submit.user_session.create'), :class => 'btn btn-inverse' %></span>
      </div>
    <% end %>
  </div>
</div>
